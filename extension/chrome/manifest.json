{
  "manifest_version": 3,
  "name": "Pokémon Showdown Randbats Tooltip",
  "description": "Enhanced tooltip functionality for Pokémon Showdown Random Battle formats.",
  "version": "1.0.0",
  "icons": {
    "16": "/16x16.png",
    "32": "/32x32.png",
    "48": "/48x48.png",
    "128": "/128x128.png"
  },
  "web_accessible_resources": [{
    "matches": ["*://play.pokemonshowdown.com/*", "*://*.psim.us/*"],
    "resources": ["/index.js"]
  }],
  "content_scripts": [
    {
      "matches": ["*://play.pokemonshowdown.com/*", "*://*.psim.us/*"],
      "js": ["/shim.js"]
    }
  ]
}